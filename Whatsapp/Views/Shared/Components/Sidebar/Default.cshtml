@{
    var usuario = ViewBag.Usuario as Whatsapp.Data.MainModels.Usuario;
}

<div class="main-menu menu-fixed menu-light menu-accordion menu-shadow" data-scroll-to-active="true">
    <div class="navbar-header">
        <ul class="nav navbar-nav flex-row">
            <li class="nav-item me-auto">
                <a class="navbar-brand" href="@Url.Action("Index","Dashboard")">
                    <span class="brand-logo">
                      <img src="~/icon.png" />
                    </span>
                    <h2 class="brand-text">Whitezap</h2>
                </a>
            </li>
            <li class="nav-item nav-toggle"><a class="nav-link modern-nav-toggle pe-0" data-bs-toggle="collapse"><i class="d-block d-xl-none text-primary toggle-icon font-medium-4" data-feather="x"></i><i class="d-none d-xl-block collapse-toggle-icon font-medium-4  text-primary" data-feather="disc" data-ticon="disc"></i></a></li>
        </ul>
    </div>
    <div class="shadow-bottom"></div>
    <div class="main-menu-content">
        <ul class="navigation navigation-main" id="main-menu-navigation" data-menu="menu-navigation">
            @if (usuario.Cargo == "Gerente" || usuario.Cargo == "Administrador")
            {

                <li class=" nav-item @ViewData["MinhaConta"]">
                    <a class="d-flex align-items-center" href="@Url.Action("","Dashboard")"><i data-feather="info"></i><span class="menu-title text-truncate" data-i18n="Dashboards">Minha Conta</span></a>
                    <ul class="menu-content">
                        <li>
                            <a class="d-flex align-items-center" href="@Url.Action("Assinatura","Dashboard")"><i data-feather="circle"></i><span class="menu-item text-truncate" data-i18n="eCommerce">Minha Assinatura</span></a>
                        </li>
                        <li>
                            <a class="d-flex align-items-center" href="@Url.Action("MinhaConta","Dashboard")"><i data-feather="circle"></i><span class="menu-item text-truncate" data-i18n="eCommerce">Minha Conta</span></a>
                        </li>
                    </ul>
                </li>
            }

            <li class=" navigation-header">
                <span data-i18n="Apps &amp; Pages">Menu Principal</span><i data-feather="more-horizontal"></i>
            </li>
            <li class="nav-item @ViewData["Index"]">
                <a class="d-flex align-items-center" href="@Url.Action("Index","Dashboard")"><i data-feather="home"></i><span class="menu-title text-truncate" data-i18n="Email">Dashboard</span></a>
            </li>
            @{
                if (usuario.Cargo == "Administrador" || usuario.Cargo == "Gerente")
                {

                    <li class=" nav-item @ViewData["Clientes"]">
                        <a class="d-flex align-items-center" href="@Url.Action("Clientes","Dashboard")"><i data-feather="users"></i><span class="menu-title text-truncate" data-i18n="Email">Clientes</span></a>
                    </li>

                    <li class=" nav-item @ViewData["Atendentes"]">
                        <a class="d-flex align-items-center" href="@Url.Action("Atendentes","Dashboard")"><i data-feather="user-check"></i><span class="menu-title text-truncate" data-i18n="Email">Atendentes</span></a>
                    </li>
                 

                    <li class=" nav-item @ViewData["Config"]">
                        <a class="d-flex align-items-center" href="#"><i data-feather="settings"></i><span class="menu-title text-truncate" data-i18n="Menu Levels">Configurações</span></a>
                        <ul class="menu-content">
                            <li>
                                <a class="d-flex align-items-center" href="@Url.Action("Configuracoes","Dashboard")"><i data-feather="circle"></i><span class="menu-item text-truncate" data-i18n="Second Level">Conexão</span></a>
                            </li>
                            <li>
                                <a class="d-flex align-items-center" href="@Url.Action("Chatbot","Dashboard")"><i data-feather="circle"></i><span class="menu-item text-truncate" data-i18n="Second Level">Chatbot</span></a>
                            </li>
                            <li>
                                <a class="d-flex align-items-center" href="#"><i data-feather="circle"></i><span class="menu-item text-truncate" data-i18n="Second Level">API</span></a>
                                <ul class="menu-content">
                                    <li>
                                        <a class="d-flex align-items-center" href="@Url.Action("MKAUTH","Dashboard")"><span class="menu-item text-truncate" data-i18n="Third Level">MKAUTH</span></a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </li>
                }
            }

            <li class=" navigation-header">
                <span data-i18n="Apps &amp; Pages">SAC</span><i data-feather="more-horizontal"></i>
            </li>

            <li class=" nav-item @ViewData["Whatsapp"]">
                <a onclick="WhatsappClick()" class="d-flex align-items-center" href="@Url.Action("Whatsapp","Dashboard")"><i data-feather="message-square"></i><span class="menu-title text-truncate" data-i18n="Email">Atendimentos</span></a>
            </li>

            <li class=" nav-item @ViewData["Tickets"]">
                <a class="d-flex align-items-center" href="@Url.Action("Tickets","Dashboard")"><i data-feather="file-text"></i><span class="menu-title text-truncate" data-i18n="Invoice">Tickets</span></a>
            </li>

            <li class=" nav-item @ViewData["Relatorios"]">
                <a class="d-flex align-items-center" href="@Url.Action("Relatorios","Dashboard")"><i data-feather="list"></i><span class="menu-title text-truncate" data-i18n="Email">Relatórios</span></a>
            </li>

        </ul>
    </div>
</div>

<script>
    function WhatsappClick() {
        document.getElementsByTagName('body')[0].classList.remove('menu-expanded');
        document.getElementsByTagName('body')[0].classList.add('menu-collapsed');

    }
</script>